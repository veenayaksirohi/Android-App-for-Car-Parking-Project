<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Base.Theme.VisionParking" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- AppCompat Base Style -->
    <style name="Widget.AppCompat" parent="android:Widget">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Material Design Widget Styles -->
    <style name="Widget.MaterialComponents" parent="Widget.AppCompat">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.VisionParking.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.VisionParking.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/vision_purple_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/vision_purple_primary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.VisionParking.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/vision_purple_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Card styles -->
    <style name="Widget.VisionParking.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>

    <!-- Input field styles -->
    <style name="Widget.VisionParking.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeColor">@color/vision_purple_primary</item>
        <item name="hintTextColor">@color/vision_purple_primary</item>
    </style>

    <!-- Chip styles -->
    <style name="Widget.VisionParking.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/vision_purple_light</item>
        <item name="android:textColor">@color/vision_purple_dark</item>
        <item name="chipStrokeColor">@color/vision_purple_primary</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <!-- Bottom navigation styles -->
    <style name="Widget.VisionParking.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/vision_purple_primary</item>
        <item name="itemTextColor">@color/vision_purple_primary</item>
        <item name="itemRippleColor">@color/vision_purple_light</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Floating action button styles -->
    <style name="Widget.VisionParking.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/vision_pink_primary</item>
        <item name="tint">@color/white</item>
        <item name="elevation">6dp</item>
    </style>

    <!-- Toolbar styles -->
    <style name="Widget.VisionParking.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/vision_purple_primary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Tab layout styles -->
    <style name="Widget.VisionParking.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabSelectedTextColor">@color/vision_purple_primary</item>
        <item name="tabIndicatorColor">@color/vision_purple_primary</item>
        <item name="tabTextColor">@color/text_secondary</item>
        <item name="tabRippleColor">@color/vision_pink_light</item>
    </style>

    <!-- Progress bar styles -->
    <style name="Widget.VisionParking.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/vision_purple_primary</item>
        <item name="android:progressTint">@color/vision_purple_primary</item>
    </style>

    <!-- Switch styles -->
    <style name="Widget.VisionParking.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumbTint">@color/vision_purple_primary</item>
        <item name="android:trackTint">@color/vision_purple_light</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
</resources> 