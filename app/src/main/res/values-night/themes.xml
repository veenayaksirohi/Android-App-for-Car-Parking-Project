<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base VisionParking dark theme -->
    <style name="Theme.VisionParking" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand colors for dark theme -->
        <item name="colorPrimary">@color/vision_purple_light</item>
        <item name="colorPrimaryVariant">@color/vision_purple_primary</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Secondary brand colors for dark theme -->
        <item name="colorSecondary">@color/vision_pink_light</item>
        <item name="colorSecondaryVariant">@color/vision_pink_accent</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Background colors for dark theme -->
        <item name="android:windowBackground">@color/background_primary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        
        <!-- Status bar for dark theme -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_primary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <!-- Navigation bar for dark theme -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/nav_bar_color</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">false</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        
        <!-- Text colors for dark theme -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- Material component overrides for dark theme -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">@color/white</item>
        <item name="elevationOverlayAccentColor">@color/vision_purple_light</item>
        <item name="android:windowContentTransitions">true</item>
        
        <!-- Text appearances -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.VisionParking.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.VisionParking.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.VisionParking.Headline3</item>
        <item name="textAppearanceBody1">@style/TextAppearance.VisionParking.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.VisionParking.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.VisionParking.Button</item>
    </style>

    <!-- Splash Screen Dark Theme -->
    <style name="Theme.VisionParking.Splash" parent="Theme.VisionParking">
        <item name="android:windowBackground">@drawable/splash_background_dark</item>
        <item name="android:statusBarColor">@color/background_primary</item>
    </style>

    <!-- Dialog Dark Theme -->
    <style name="Theme.VisionParking.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/vision_purple_light</item>
        <item name="colorSecondary">@color/vision_pink_light</item>
        <item name="android:background">@color/surface</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <!-- Text Appearances for Dark Theme -->
    <style name="TextAppearance.VisionParking.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.VisionParking.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.VisionParking.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.VisionParking.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.VisionParking.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.VisionParking.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Brand Title Style for Dark Theme -->
    <style name="TextAppearance.VisionParking.Brand" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/vision_purple_light</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <!-- Secondary text styles for better dark theme readability -->
    <style name="TextAppearance.VisionParking.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.VisionParking.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
</resources>